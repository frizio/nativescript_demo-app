<Page class="page" loaded="onLoaded">

    <Page.actionBar>
        <ActionBar title="The Demo App" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <FlexboxLayout class="p-10" backgroundColor="#eee" flexDirection="column" justifyContent="center" alignItems="stretch" flexWrap="wrap" >
        <TextField marginBottom="10" hint="Enter some text" text="{{username}}" />
        <Label marginBottom="10" text="{{username}}" textWrap="true" />
        <Button text="Click me" tap="clickMe" />
    </FlexboxLayout>

</Page>

